#to run django project on ubuntu server after cloning the project
sudo apt-get update
sudo mkdir p
sudo cd p
sudo git clone https://github.com/shreys7/django-todo.git
sudo cd django-todo/
sudo apt-get update
sudo apt install python3-django
sudo python3 manage.py makemigrations
sudo python3 manage.py migrate
sudo python3 manage.py createsuperuser
sudo python3 manage.py runserver "0.0.0.0:8000"
#open vi todoApp/settings.py edit allowed hosts to '*' to all ip
#to run it on docker go to the project folder run following commands
#create docker file with vi Dockerfile
apt install docker.io -y
docker build . -t todo
docker images
